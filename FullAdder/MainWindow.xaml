<Window x:Class="FullAdder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListBox Name="Inputs" ItemsSource="{Binding Inputs}" Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Name="Checkbox" Content="{Binding Name}" 
                              Tag="{Binding Value}" IsChecked="{Binding Value}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Name="Outputs" ItemsSource="{Binding Outputs, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Name="Checkbox" Content="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                              IsChecked="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
